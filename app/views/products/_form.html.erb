<%= render 'shared/errors', obj: @product %>

<div class='row'>
  <div class='col-xs-8 col-xs-offset-2'>
    <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
         <%= f.label :name %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :name, class:"form-control", placeholder: "Name of product", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :price %>
        </div>
        <div class='col-sm-8'>
           <%= f.number_field :price, class:"form-control", placeholder: "Price of product", autofocus: true, :step => 0.01, :min => 0.00 %>
        </div>
      </div>
      
      <div class='form-group'>
         <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class:'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-10 col-xs-offset-2">
      [ <%= link_to "Cancel request and return to products listing", products_path %> ]
    </div>
 </div>
</div>